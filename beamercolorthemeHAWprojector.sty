\ProvidesPackage{beamercolorthemeHAWprojector}


\definecolor{HAWprojector@black}{HTML}{2B2E34}
\definecolor{HAWprojector@white}{HTML}{FFFFFF}
\definecolor{HAWprojector@blue}{HTML}{003CA0}      % CMYK 100, 70, 0, 6
\definecolor{HAWprojector@lightblue}{HTML}{A0BEDC} % CMYK  42, 16, 4, 0
\definecolor{HAWprojector@midblue}{HTML}{0096D2}   % CMYK  85, 21, 0, 0

\colorlet{HAWprojector@lightGray}{white!80!HAWprojector@black}
\colorlet{HAWprojector@gray}{white!35!HAWprojector@black}
\colorlet{HAWprojector@darkGray}{white!20!HAWprojector@black}
\definecolor{HAWprojector@lightRed}{HTML}{FF8E6B}
\colorlet{HAWprojector@darkRed}{red!80!HAWprojector@white}

%% Background gradients
% \colorlet{HAWprojector@dark@backgroundInner}{HAWprojector@black}
